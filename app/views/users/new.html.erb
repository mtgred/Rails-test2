<div class="page-header">
  <h2>Sign up</h2>
</div>

<div class="row">
  <div class="span10">
  <% if @user.errors.any? %>
    <div class="alert-message block-message error">
      <a class="close" href="#">Ã—</a>
      <p><strong>Invalid form.</strong></p>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for @user, :html => { :class => "form-stacked" } do |f| %>

    <div class="clearfix">
      <%= f.label :name %>
      <div class="input"><%= f.text_field :name %></div>
    </div>

    <div class="clearfix">
      <%= f.label :email %>
      <div class="input"><%= f.email_field :email %></div>
    </div>

    <div class="clearfix">
      <%= f.label :password %>
      <div class="input"><%= f.password_field :password %></div>
    </div>

    <div class="clearfix">
      <%= f.label :password_confirmation %>
      <div class="input"><%= f.password_field :password_confirmation %></div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", :class => "btn primary" %>
    </div>
  <% end %>
  Already have an account? <%= link_to "Log in", login_path() %>
  </div>
</div>

